@model Startup_Weekend_Application.Models.Ping


@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

 <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Current Beacons</h4>
                                <p class="category">View people wanting to play.</p>
                            </div>
                            <div class="content">
                                <div>

                              
                                @Html.Partial("BeaconPartial")
							
						        </div>
                                
						        

                                <div class="footer">

                                    <div class="legend">
                                        <a href="/dashboard/beacons" class="btn btn-danger">View All</a>
                                    </div>
                                    <hr>
                                    <div class="stats">
                                        <i class="fa fa-clock-o"></i> Last updated 2 minutes ago.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Add New Beacon</h4>
                                <p class="category">Create a beacon to play.</p>
                            </div>
                            <div class="content">
                                <div ></div>
						

						            <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Game" class="control-label"></label>
                                            <input asp-for="Game" class="form-control" />
                                            <span asp-validation-for="Game" class="text-danger"></span>
                                        </div>
							            <div class="form-group">
                                            <label asp-for="Platform" class="control-label"></label>
                                            <select asp-for="Platform" class="form-control" id="Platform" name="Platform">
                                                <option value="">- Select Your Platform -</option>
                                                <option value="Xbox">Xbox</option>
                                                <option value="Play Station 4">Play Station 4</option>
                                                <option value="PC">PC</option>
                                            </select>
                                        </div>
							            <div class="form-group">
								            <label asp-for="PlayStyle" class="control-label"></label>
    							            <select asp-for="PlayStyle" class="form-control" id="PlayStyle" name="PlayStyle">
            								    <option value="">- Select Your Playstyle -</option>
                                                <option value="Casual">Casual</option>
                                                <option value="Competitive">Competitive</option>
                                            </select>
								        </div>
                                       <div class="form-group">
                                            <label asp-for="SkillLevel" class="control-label"></label>
                                            <select asp-for="SkillLevel" class="form-control" id="SkillLevel" name="SkillLevel">
                                                <option value="">- Slect Your Skill Level -</option>
                                                <option value="Beginner">Beginner</option>
                                                <option value="Intermediate">Intermediate</option>
									            <option value="Expert">Expert</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-danger" />
                                        </div>
                                    </form>
						
                                 <div class="footer">
                                    <div class="legend">
                                     
                                    </div>
                                    <hr>
                                    <div class="stats">
                                        <i class="fa fa-history"></i> Updated 3 minutes ago
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-6">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Friends List</h4>
                                <p class="category">All of your friends</p>
                            </div>
                            <div class="content">
                                

						        <table class="table">
                    <thead>
                        <tr>
                                <th>
                                    Username
                                </th>
                                <th>
                                   Online
                                </th>
                        </tr>
                    </thead>
                <tbody>
        
                    <tr>
                        <td>
                             <p>Grillowner</p>
                           
                        </td>
                        <td>
                            <p>No</p>
                        </td>

                    </tr>
								<tr>
                        <td>
                             <p>CombatKid</p>
                           
                        </td>
                        <td>
                            <p>No</p>
                        </td>

                    </tr>
								<tr>
                        <td>
                             <p>Bobby</p>
                           
                        </td>
                        <td>
                            <p>No</p>
                        </td>
									<tr>
                        <td>
                             <p>ColePerry</p>
                           
                        </td>
                        <td>
                            <p>No</p>
                        </td>

                    </tr>

                    </tr>
                </tbody>
            </table>

                                <div class="footer">
                                    <hr>
                                    <div class="stats">
                                        <i class="fa fa-history"></i> Updated 2 minutes ago
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                      @Html.Partial("InterestsPartial")  
                      
                   
                </div>
            </div>
        </div>

