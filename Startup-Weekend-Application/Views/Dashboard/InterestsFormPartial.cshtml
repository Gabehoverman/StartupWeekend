@model Startup_Weekend_Application.Models.Interests

<div class="col-md-4">
<div class="card ">
		<div class="header">
     <form asp-action="NewInterest">
			<h3 class="title">Add New Interest</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameTitle" class="control-label"></label>
                <input asp-for="GameTitle" class="form-control" />
                <span asp-validation-for="GameTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Platform" class="control-label"></label>
                <select asp-for="Platform" class="form-control" id="Platform" name="Platform">
                    <option value="">- Select Your Platform -</option>
                    <option value="Xbox">Xbox</option>
                    <option value="Play Station 4">Play Station 4</option>
                    <option value="PC">PC</option>
                </select>
            </div>
				<div class="footer">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
					</div>
        </form>
			</div>
    </div>
</div>