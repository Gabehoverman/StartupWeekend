@model IEnumerable<Startup_Weekend_Application.Models.Ping>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
			    <th>
                    @Html.DisplayNameFor(model => model.Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
			    <th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>
			    <th>
                    @Html.DisplayNameFor(model => model.PlayStyle)
                </th>
			    <th>
                    @Html.DisplayNameFor(model => model.SkillLevel)
                </th>
			
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.Game)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.PlayStyle)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.SkillLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
